	</include>

	<include file="$(find gazebo_move_v2)/launch/generic_turtle.launch">
		<arg name="turtle_id" value="2"/>
		<arg name="x" value="1"/>
		<arg name="y" value="0" />
	</include>
	-->

</launch>


